<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.layout.VBox?>
<?import javafx.scene.text.Font?>

<VBox stylesheets="@style-client.css" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="300.0" scaleShape="false" xmlns="http://javafx.com/javafx/23.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="app.ClientController">
   <children>
      <Label alignment="CENTER" prefHeight="75.0" prefWidth="600.0" text="Online Calculator" textAlignment="CENTER">
         <font>
            <Font name="Calibri Bold" size="24.0" />
         </font>
      </Label>
      <TextArea fx:id="status" prefHeight="14.0" prefWidth="300.0" />
      <TextField fx:id="inputExpr" prefHeight="70.0" prefWidth="300.0" promptText="Enter a expression">
         <font>
            <Font name="Calibri" size="18.0" />
         </font></TextField>
      <Button mnemonicParsing="false" onAction="#sendToServer" text="Button" />
      <TextArea fx:id="answer" prefHeight="80.0" prefWidth="300.0" />
   </children>
</VBox>
